{% macro action_toolbutton(icon, action, label, class) %}
    <button class="btn {{ class|default('btn-box-tool') }}" data-widget="{{ action }}" data-toggle="tooltip" title="{{ label|default('') }}">
        <i class="{{ icon|default('times') }}"></i>
    </button>
{% endmacro %}

{% macro link_toolbutton(icon, href, label, class) %}
    <a href="{{ href }}" class="btn {{ class|default('btn-box-tool') }}" data-toggle="tooltip" title="{{ label|default('') }}">
        <i class="{{ icon|default('times') }}"></i>
    </a>
{% endmacro %}

{% macro link_button(label, href, icon, type, size, class) %}
    {% set _size = class is not defined or class == '' ? size|default(admin_lte_context.button.size) %}
    {% set _type = class is not defined or class == '' ? type|default(admin_lte_context.button.type) %}
    <a href="{{ href|default('#') }}" class="btn{% if class %} {{ class }}{% endif %}{% if _type %} btn-{{ _type }}{% endif %}{% if _size %} btn-{{ _size }}{% endif %}">
        {% if icon %}
            <i class="{{ icon }}"></i>
        {% endif %}
        {% if label %}
            <span>{{ label }}</span>
        {% endif %}
    </a>
{% endmacro %}

{% macro action_button(label, action, icon, type, size, class) %}
    {% set _size = class is not defined or class == '' ? size|default(admin_lte_context.button.size) %}
    {% set _type = class is not defined or class == '' ? type|default(admin_lte_context.button.type) %}
    <button data-action="{{ action }}" class="btn{% if class %} {{ class }}{% endif %}{% if _type %} btn-{{ _type }}{% endif %}{% if _size %} btn-{{ _size }}{% endif %}">
        {% if icon %}
            <i class="{{ icon }}"></i>
        {% endif %}
        {% if label %}
            <span>{{ label }}</span>
        {% endif %}
    </button>
{% endmacro %}
